{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "lib": [
      "esnext"
    ],
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}